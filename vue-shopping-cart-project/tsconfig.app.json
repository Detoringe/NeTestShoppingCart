{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/buttons/*": ["./src/task/components/buttons/*"],
      "@/composables/*": ["./src/task/composables/*"],
      "@/counters/*": ["./src/task/counters/*"],
      "@/images/*": ["./src/task/components/images/*"],
      "@/layoutComponents/*": ["./src/task/components/layouts/components/*"],
      "@/layoutPages/*": ["./src/task/components/layouts/pages/*"],
      "@/layoutShoppingCarts/*": ["./src/task/components/layouts/shoppingcarts/*"],
      "@/products/*": ["./src/task/components/products/*"],
      "@/sections/*": ["./src/task/sections/*"],
      "@/shoppingcarts/*": ["./src/task/shoppingcarts/*"],
      "@/stores/*": ["./src/task/stores/*"],
      "@/texts/*": ["./src/task/components/texts/*"],
      "@/*": ["./src/*"]
    }
  }
}
